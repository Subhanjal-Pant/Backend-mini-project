    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white flex flex-col">
        <h1 class="text-3xl m-3 font-bold">User Profile</h1>
        
        <div class="w-full min-h-screen mx-10 my-6 flex flex-col gap-2">
            <p class="text-[18px]">Hello <%= username %>  ðŸ‘‹</p>
